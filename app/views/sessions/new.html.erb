<form id="login_form" class="form-horizontal" action="/sessions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <div class="form-group">
    <div class="col-sm-10">
      <label for="username" class="col-sm-2 control-label">Username:</label>
      <input class="form-control" type="text" name="session[username]" value="">
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-10">
        <label for="password" class="col-sm-2 control-label">Password:</label>
        <input class="form-control" type="password" name="session[password]" value="">
      </div>
  </div>
  <div class="error_div">
    <ul class="error_login">
      <% if @errors %>
        <% @errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <br/>
  <div class="col-sm-10">
    <input class="btn btn-primary btn-sm" type="submit" name="" value="Login!">
    <button id="login_cancel" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
  </div>
</form>
